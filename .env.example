# Campus Hustle Environment Variables

# Application
VITE_APP_NAME=Campus Hustle
VITE_APP_URL=http://localhost:5173
VITE_API_BASE_URL=http://localhost:3001/api

# Database
DATABASE_URL=mongodb://localhost:27017/campus_hustle

# Authentication
VITE_JWT_SECRET=your-super-secret-jwt-key
VITE_JWT_EXPIRES_IN=7d

# Email Service (for notifications/password reset)
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your-email@gmail.com
VITE_SMTP_PASS=your-app-password

# File Upload (Cloudinary or AWS S3)
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_API_KEY=your-api-key
VITE_CLOUDINARY_API_SECRET=your-api-secret

# Mobile Money Integration (for payments)
VITE_MTN_MOMO_API_KEY=your-mtn-api-key
VITE_AIRTEL_MONEY_API_KEY=your-airtel-api-key

# External Services
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key
VITE_WHATSAPP_BUSINESS_API=your-whatsapp-api

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_MAINTENANCE_MODE=false
